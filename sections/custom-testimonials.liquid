{%- style -%}
  .section-custom-testimonials {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    overflow: hidden; /* Hide overflow for marquee */
  }

  .custom-testimonials__container {
    max-width: 100%; /* Allow full width for scrolling */
    margin: 0 auto;
    padding: 0; /* Remove padding to let items scroll edge to edge */
  }

  .custom-testimonials__static {
    display: flex;
    flex-wrap: wrap;
    gap: 30px;
    justify-content: center;
  }

  .custom-testimonials__heading {
    text-align: center;
    margin-bottom: 40px;
    padding: 0 20px;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Marquee Track */
  .custom-testimonials__marquee {
    display: flex;
    overflow: hidden;
    user-select: none;
    gap: 30px;
    width: 100%;
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
    -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  }

  .custom-testimonials__track {
    display: flex;
    gap: 30px;
    flex-shrink: 0;
    min-width: 100%;
    animation: scroll-left {{ section.settings.scroll_speed | default: 30 }}s linear infinite;
  }
  
  .custom-testimonials__marquee:hover .custom-testimonials__track {
    animation-play-state: paused;
  }

  @keyframes scroll-left {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-100% - 30px)); /* Move by 100% of the track + gap */
    }
  }

  .testimonial-card {
    background: #fff;
    border-radius: 12px;
    padding: 30px;
    box-shadow: 0 4px 15px rgba(0,0,0,0.05); /* Subtle shadow */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    border: 1px solid #f0f0f0;
    width: 350px; /* Fixed width for scrolling items */
    flex-shrink: 0;
  }

  .testimonial-card__stars {
    color: #a4c86e; /* Brand Color */
    margin-bottom: 15px;
    display: flex;
    gap: 2px;
  }
  
  .testimonial-card__stars svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }

  .testimonial-card__text {
    font-size: 16px;
    line-height: 1.5;
    color: #333;
    margin-bottom: 25px;
    flex-grow: 1;
  }

  .testimonial-card__footer {
    display: flex;
    align-items: center;
    gap: 15px;
  }

  .testimonial-card__avatar {
    width: 48px;
    height: 48px;
    background-color: #a4c86e; /* Brand Color */
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 20px;
    font-weight: bold;
    text-transform: uppercase;
  }

  .testimonial-card__info {
    display: flex;
    flex-direction: column;
  }

  .testimonial-card__author {
    font-weight: bold;
    color: #000;
    font-size: 16px;
    line-height: 1.2;
    margin-bottom: 4px;
  }

  .testimonial-card__verified {
    font-size: 13px;
    color: #666;
  }

  .testimonial-card__city {
    font-size: 13px;
    color: #666;
  }

{%- endstyle -%}

<div class="section-custom-testimonials">
  <div class="custom-testimonials__container">
    {%- if section.settings.heading != blank -%}
      <h2 class="custom-testimonials__heading" style="color: {{ section.settings.heading_color }};">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- assign testimonial_count = section.blocks.size -%}

    {%- if section.settings.enable_auto_scroll and testimonial_count > 3 -%}
      <div class="custom-testimonials__marquee">
        <!-- First set of blocks -->
        <div class="custom-testimonials__track">
          {%- for block in section.blocks -%}
            <div class="testimonial-card" {{ block.shopify_attributes }}>
              <div class="testimonial-card__stars">
                {%- for i in (1..5) -%}
                  {%- if i <= block.settings.rating -%}
                     {%- comment -%} Full Star {%- endcomment -%}
                     <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                  {%- else -%}
                     {%- comment -%} Empty Star (optional, image shows full stars) {%- endcomment -%}
                  {%- endif -%}
                {%- endfor -%}
              </div>

              <div class="testimonial-card__text">
                {{ block.settings.text }}
              </div>

              <div class="testimonial-card__footer">
                {%- if block.settings.show_avatar -%}
                  <div class="testimonial-card__avatar">
                    {{ block.settings.author | slice: 0 }}
                  </div>
                {%- endif -%}
                
                <div class="testimonial-card__info">
                  <span class="testimonial-card__author">{{ block.settings.author }}</span>
                  {%- if block.settings.verified -%}
                    <span class="testimonial-card__verified">Verified Buyer</span>
                  {%- endif -%}
                  {%- if block.settings.city != blank -%}
                    <span class="testimonial-card__city">{{ block.settings.city }}</span>
                  {%- endif -%}
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
        <!-- Duplicate set for seamless scrolling -->
        <div class="custom-testimonials__track" aria-hidden="true">
          {%- for block in section.blocks -%}
             <div class="testimonial-card" {{ block.shopify_attributes }}>
              <div class="testimonial-card__stars">
                {%- for i in (1..5) -%}
                  {%- if i <= block.settings.rating -%}
                     {%- comment -%} Full Star {%- endcomment -%}
                     <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                  {%- else -%}
                     {%- comment -%} Empty Star (optional, image shows full stars) {%- endcomment -%}
                  {%- endif -%}
                {%- endfor -%}
              </div>

              <div class="testimonial-card__text">
                {{ block.settings.text }}
              </div>

              <div class="testimonial-card__footer">
                {%- if block.settings.show_avatar -%}
                  <div class="testimonial-card__avatar">
                    {{ block.settings.author | slice: 0 }}
                  </div>
                {%- endif -%}
                
                <div class="testimonial-card__info">
                  <span class="testimonial-card__author">{{ block.settings.author }}</span>
                  {%- if block.settings.verified -%}
                    <span class="testimonial-card__verified">Verified Buyer</span>
                  {%- endif -%}
                  {%- if block.settings.city != blank -%}
                    <span class="testimonial-card__city">{{ block.settings.city }}</span>
                  {%- endif -%}
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    {%- else -%}
      <div class="custom-testimonials__static">
        {%- for block in section.blocks -%}
          <div class="testimonial-card" {{ block.shopify_attributes }}>
            <div class="testimonial-card__stars">
              {%- for i in (1..5) -%}
                {%- if i <= block.settings.rating -%}
                   {%- comment -%} Full Star {%- endcomment -%}
                   <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 17.27L18.18 21l-1.64-7.03L22 9.24l-7.19-.61L12 2 9.19 8.63 2 9.24l5.46 4.73L5.82 21z"/></svg>
                {%- else -%}
                   {%- comment -%} Empty Star (optional, image shows full stars) {%- endcomment -%}
                {%- endif -%}
              {%- endfor -%}
            </div>

            <div class="testimonial-card__text">
              {{ block.settings.text }}
            </div>

            <div class="testimonial-card__footer">
              {%- if block.settings.show_avatar -%}
                <div class="testimonial-card__avatar">
                  {{ block.settings.author | slice: 0 }}
                </div>
              {%- endif -%}
              
              <div class="testimonial-card__info">
                <span class="testimonial-card__author">{{ block.settings.author }}</span>
                {%- if block.settings.verified -%}
                  <span class="testimonial-card__verified">Verified Buyer</span>
                {%- endif -%}
                {%- if block.settings.city != blank -%}
                  <span class="testimonial-card__city">{{ block.settings.city }}</span>
                {%- endif -%}
              </div>
            </div>
          </div>
        {%- endfor -%}
      </div>
    {%- endif -%}
  </div>
</div>

