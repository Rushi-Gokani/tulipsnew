{% doc %}
  @prompt
    heading & all upload image or icon horizontally , add setting to make page width or fullk with 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-icon-row-{{ ai_gen_id }} {
    display: block;
    width: 100%;
  }

  .ai-icon-row-container-{{ ai_gen_id }} {
    width: 100%;
    {% if block.settings.container_width == 'page' %}
      max-width: {{ settings.page_width }}px;
      margin: 0 auto;
      padding: 0 {{ settings.spacing_desktop }}rem;
    {% endif %}
  }

  .ai-icon-row-inner-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-icon-row-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
  }

  .ai-icon-row-items-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.item_gap }}px;
    justify-content: {{ block.settings.items_alignment }};
    align-items: center;
  }

  .ai-icon-row-item-{{ ai_gen_id }} {
    flex: 0 0 auto;
  }

  .ai-icon-row-image-{{ ai_gen_id }} {
    width: {{ block.settings.image_width }}px;
    height: auto;
    display: block;
  }

  .ai-icon-row-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_width }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-icon-row-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    opacity: 0.3;
  }

  @media screen and (max-width: 749px) {
    .ai-icon-row-container-{{ ai_gen_id }} {
      {% if block.settings.container_width == 'page' %}
        padding: 0 {{ settings.spacing_mobile }}rem;
      {% endif %}
    }

    .ai-icon-row-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-icon-row-image-{{ ai_gen_id }} {
      width: {{ block.settings.image_width_mobile }}px;
    }

    .ai-icon-row-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.image_width_mobile }}px;
      height: {{ block.settings.image_width_mobile }}px;
    }

    .ai-icon-row-items-{{ ai_gen_id }} {
      gap: {{ block.settings.item_gap_mobile }}px;
      justify-content: center;
    }

    .ai-icon-row-item-{{ ai_gen_id }} {
      flex: 0 0 calc(50% - {{ block.settings.item_gap_mobile }}px);
      display: flex;
      justify-content: center;
    }
  }
{% endstyle %}

<icon-row-{{ ai_gen_id }} class="ai-icon-row-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-icon-row-inner-{{ ai_gen_id }}">
    <div class="ai-icon-row-container-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-icon-row-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      <div class="ai-icon-row-items-{{ ai_gen_id }}">
        {% for i in (1..8) %}
          {% liquid
            assign image_key = 'image_' | append: i
            assign image = block.settings[image_key]
          %}

          {% if image != blank %}
            <div class="ai-icon-row-item-{{ ai_gen_id }}">
              <img
                src="{{ image | image_url: width: 400 }}"
                alt="{{ image.alt | escape }}"
                loading="lazy"
                width="{{ block.settings.image_width }}"
                height="auto"
                class="ai-icon-row-image-{{ ai_gen_id }}"
              >
            </div>
          {% endif %}
        {% endfor %}

        {% if block.settings.image_1 == blank and block.settings.image_2 == blank and block.settings.image_3 == blank and block.settings.image_4 == blank and block.settings.image_5 == blank and block.settings.image_6 == blank and block.settings.image_7 == blank and block.settings.image_8 == blank %}
          {% for i in (1..4) %}
            <div class="ai-icon-row-item-{{ ai_gen_id }}">
              <div class="ai-icon-row-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </div>
</icon-row-{{ ai_gen_id }}>

<script>
  (function() {
    class IconRow{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
      }
    }

    customElements.define('icon-row-{{ ai_gen_id }}', IconRow{{ ai_gen_id }});
  })();
</script>

